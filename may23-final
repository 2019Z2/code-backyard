using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int acd = 0, exp = 0, fit = 0;
            while (acd >= 0 && exp >= 0 && fit >= 0)
            {
                Console.WriteLine("Hi");
                Console.WriteLine("Academic yrs?");
                acd = int.Parse(Console.ReadLine());
                Console.WriteLine("expertise?");
                exp = int.Parse(Console.ReadLine());
                fit = acd * exp;
                if (fit < 8)
                {
                    Console.WriteLine("Sorry, but you dont seems to fit.");
                }
                else if (fit >= 8 && fit <= 15)
                {
                    Console.WriteLine("Succes, you may fit as a worker");

                }
                else if (fit >= 15)
                {
                    Console.WriteLine("Congrats! you may fit as one of our managers!");
                }
            }
        
    }
} }
